<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.geometry.Pos?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Priority?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.web.WebView?>

<VBox spacing="10.0" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.example.task_4.WikibooksController">
    <padding>
        <Insets top="10" right="10" bottom="10" left="10"/>
    </padding>

    <!-- Top row: input + search -->
    <HBox spacing="10.0">
        <children>
            <Label text="Book name"/>
            <TextField fx:id="input" onKeyPressed="#onInputKeyPressed" HBox.hgrow="ALWAYS"/>
            <Button text="Search" onMouseClicked="#onSearchClicked"/>
        </children>
    </HBox>

    <!-- WebView fills the remaining space -->
    <WebView fx:id="browser" VBox.vgrow="ALWAYS"/>

    <!-- Buttons row -->
    <HBox spacing="10.0" alignment="CENTER">
        <children>
            <Button text="Add" onMouseClicked="#onAddClicked"/>
            <Button text="Sort" onMouseClicked="#onSortClicked"/>
            <Button text="Delete" onMouseClicked="#onDeleteClicked"/>
            <Button text="Save" onMouseClicked="#onSaveClicked"/>
            <Button text="Load" onMouseClicked="#onLoadClicked"/>
            <Button text="Import" onMouseClicked="#onImportClicked"/>
            <Button text="Export" onMouseClicked="#onExportClicked"/>
        </children>
    </HBox>

    <!-- Bottom labels -->
    <HBox spacing="10.0" alignment="CENTER_LEFT">
        <children>
            <Label fx:id="lastChangeDate" HBox.hgrow="ALWAYS"/>
            <Label fx:id="lastEditor" HBox.hgrow="ALWAYS"/>
            <Label fx:id="shelf" HBox.hgrow="ALWAYS"/>
        </children>
    </HBox>
</VBox>
